---
import ImageComponent from "./Image.astro";
import type { Image } from "../types";

interface Props {
	images: Array<Image>;
	loading?: HTMLImageElement["loading"];
}

const { images, loading = "eager" } = Astro.props;
---

<>
{
    images?.map(
      (
        {
          backgroundColor,
          caption,
          color,
          height,
          id,
          largeUrl,
          mobileUrl,
          url,
          width,
        }
      ) => {
        return (
          <ImageComponent
            backgroundColor={backgroundColor}
            caption={caption}
            color={color}
            height={height}
            id={id}
            largeUrl={largeUrl}
            loading={loading}
            mobileUrl={mobileUrl}
            url={url}
            width={width}
          />
        );
      }
    )
  }
<>
