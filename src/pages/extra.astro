---
import ImageComponent from "../components/Image.astro";
import { INITIAL_IMAGES_COUNT } from "../constants";

const images = Astro.locals.images.slice(INITIAL_IMAGES_COUNT);
---
<>
{
    images?.map(
      (
        {
          backgroundColor,
          caption,
          color,
          height,
          id,
          responsiveUrl,
          url,
          width,
        }
      ) => {
        return (
          <ImageComponent
            backgroundColor={backgroundColor}
            caption={caption}
            color={color}
            height={height}
            id={id}
            loading="eager"
            responsiveUrl={responsiveUrl}
            skipStyles
            src={url}
            width={width}
          />
        );
      }
    )
  }
</>
